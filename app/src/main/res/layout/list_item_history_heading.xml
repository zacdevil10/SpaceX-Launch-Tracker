<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="58dp">

    <View
        android:layout_width="0dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/list_item_history_heading_container"
        android:background="?android:attr/colorBackground" />

    <View
        android:id="@+id/list_item_history_line_top"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/list_item_history_marker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_item_history_marker"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/event_circle"
        app:layout_constraintLeft_toLeftOf="@id/list_item_history_line_top"
        app:layout_constraintRight_toRightOf="@id/list_item_history_line_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/list_item_history_line_bottom"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/list_item_history_marker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_history_heading_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="9dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_item_history_marker"
        android:background="?android:attr/colorBackground">

        <TextView
            android:id="@+id/list_item_history_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading"
            android:textColor="@android:color/white"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="2019" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>