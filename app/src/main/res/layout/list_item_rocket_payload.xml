<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/small_margin">

    <TextView
        android:id="@+id/list_item_rocket_payload_orbit_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Low Earth" />

    <TextView
        android:id="@+id/list_item_rocket_payload_mass_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/list_item_rocket_payload_orbit_type_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_rocket_payload_orbit_type_text"
        app:layout_constraintTop_toTopOf="@id/list_item_rocket_payload_orbit_type_text"
        tools:text="3500 kg / 1000 lbs" />

</androidx.constraintlayout.widget.ConstraintLayout>