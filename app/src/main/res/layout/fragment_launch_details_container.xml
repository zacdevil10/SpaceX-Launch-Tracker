<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_launch_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".launches.details.LaunchDetailsContainerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_progress" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/launch_details_countdown_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background"
            android:elevation="@dimen/toolbar_elevation"
            android:paddingStart="@dimen/medium_margin"
            android:paddingTop="@dimen/small_margin"
            android:paddingEnd="@dimen/medium_margin"
            android:paddingBottom="@dimen/small_margin"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
            tools:visibility="visible">

            <TextView
                android:id="@+id/launch_details_countdown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:letterSpacing="0.1"
                android:textAlignment="center"
                android:textAppearance="?textAppearanceHeadline4"
                android:textColor="?colorSecondary"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="T-43:13:23:55" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/launch_details_watch_now"
                style="?materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/watch_live_label"
                android:textColor="?colorError"
                android:visibility="gone"
                app:icon="@drawable/ic_play_arrow_black_24dp"
                app:iconGravity="textStart"
                app:iconTint="?colorError"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/launch_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/launch_details_countdown_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/launch_details_bottom_navigation"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>