<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_first_stage_core_serial_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="?textAppearanceHeadline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="B1047" />

        <TextView
            android:id="@+id/list_item_first_stage_reused_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/reused"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/list_item_pad_success_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_first_stage_core_serial_text" />

        <ImageView
            android:id="@+id/list_item_first_stage_reused_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/reused_status_desc"
            app:layout_constraintEnd_toEndOf="@+id/list_item_first_stage_reused_text"
            app:layout_constraintStart_toStartOf="@+id/list_item_first_stage_reused_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_first_stage_reused_text"
            tools:src="@drawable/ic_check_circle_black_24dp" />

        <TextView
            android:id="@+id/list_item_pad_success_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/landed_label"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/list_item_first_stage_landing_text"
            app:layout_constraintStart_toEndOf="@id/list_item_first_stage_reused_text"
            app:layout_constraintTop_toBottomOf="@id/list_item_first_stage_core_serial_text" />

        <ImageView
            android:id="@+id/list_item_first_stage_landed_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/landed_status_desc"
            app:layout_constraintEnd_toEndOf="@+id/list_item_pad_success_label"
            app:layout_constraintStart_toStartOf="@+id/list_item_pad_success_label"
            app:layout_constraintTop_toBottomOf="@+id/list_item_pad_success_label"
            tools:src="@drawable/ic_check_circle_black_24dp" />

        <TextView
            android:id="@+id/list_item_first_stage_landing_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/landing_label"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_item_pad_success_label"
            app:layout_constraintTop_toBottomOf="@id/list_item_first_stage_core_serial_text" />

        <ImageView
            android:id="@+id/list_item_first_stage_landing_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/launch_pad_status_desc"
            app:layout_constraintEnd_toEndOf="@+id/list_item_first_stage_landing_text"
            app:layout_constraintStart_toStartOf="@+id/list_item_first_stage_landing_text"
            app:layout_constraintTop_toTopOf="@+id/list_item_first_stage_landed_image"
            tools:src="@drawable/ic_waves" />

        <View
            android:id="@+id/list_item_separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="#1FFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_first_stage_reused_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/list_item_first_stage_details_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/details_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>