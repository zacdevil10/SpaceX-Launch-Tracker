<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_dashboard_edit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/customise_dashboard_label"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/dialog_dashboard_edit_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/next_launch"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_dashboard_edit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/dialog_dashboard_edit_previous"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/latest_launch"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_dashboard_edit_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/dialog_dashboard_edit_pinned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pinned_launches"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_dashboard_edit_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>