<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".statistics.graphs.ui.TotalLaunchesChartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/total_launches_filter_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/total_launches_pie_chart">

        <TextView
            android:id="@+id/total_launches_filters_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/filter"/>

        <ToggleButton
            android:id="@+id/total_launches_success_toggle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/filter_successes"
            android:textOn="@string/filter_successes"
            android:textOff="@string/filter_successes"
            android:textSize="@dimen/filter_text_size"
            android:checked="false"
            android:background="@drawable/filter_toggle_green"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/total_launches_filters_text"/>

        <ToggleButton
            android:id="@+id/total_launches_failure_toggle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/filter_failures"
            android:textOn="@string/filter_failures"
            android:textOff="@string/filter_failures"
            android:textSize="@dimen/filter_text_size"
            android:checked="false"
            android:background="@drawable/filter_toggle_red"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/total_launches_success_toggle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/total_launches_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/total_launches_filter_constraint"
        app:layout_constraintBottom_toTopOf="@id/total_launches_progress_card"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/total_launches_progress_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/total_launches_pie_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/total_launches_progress_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/total_launches_success_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/heading"
                android:textColor="@color/colorAccent"
                android:text="@string/success_rate_heading"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ProgressBar
                android:id="@+id/total_launches_falcon_one_rate_progress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="false"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/circular_progress"
                android:max="100"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintTop_toBottomOf="@id/total_launches_success_title_text"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/total_launches_falcon_one_percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/total_launches_falcon_one_rate_progress"
                app:layout_constraintRight_toRightOf="@id/total_launches_falcon_one_rate_progress"
                app:layout_constraintTop_toTopOf="@id/total_launches_falcon_one_rate_progress"
                app:layout_constraintBottom_toBottomOf="@id/total_launches_falcon_one_rate_progress"
                tools:text="100%"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/falcon_1"
                app:layout_constraintTop_toBottomOf="@id/total_launches_falcon_one_rate_progress"
                app:layout_constraintLeft_toLeftOf="@id/total_launches_falcon_one_rate_progress"
                app:layout_constraintRight_toRightOf="@id/total_launches_falcon_one_rate_progress"/>

            <ProgressBar
                android:id="@+id/total_launches_falcon_nine_rate_progress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="false"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/circular_progress"
                android:max="100"
                app:layout_constraintLeft_toRightOf="@id/total_launches_falcon_one_rate_progress"
                app:layout_constraintRight_toLeftOf="@id/total_launches_falcon_heavy_rate_progress"
                app:layout_constraintTop_toBottomOf="@id/total_launches_success_title_text"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/total_launches_falcon_nine_percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintRight_toRightOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintTop_toTopOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintBottom_toBottomOf="@id/total_launches_falcon_nine_rate_progress"
                tools:text="100%"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/falcon_9"
                app:layout_constraintTop_toBottomOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintLeft_toLeftOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintRight_toRightOf="@id/total_launches_falcon_nine_rate_progress"/>

            <ProgressBar
                android:id="@+id/total_launches_falcon_heavy_rate_progress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="false"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/circular_progress"
                android:max="100"
                app:layout_constraintLeft_toRightOf="@id/total_launches_falcon_nine_rate_progress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_launches_success_title_text"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/total_launches_falcon_heavy_percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/total_launches_falcon_heavy_rate_progress"
                app:layout_constraintRight_toRightOf="@id/total_launches_falcon_heavy_rate_progress"
                app:layout_constraintTop_toTopOf="@id/total_launches_falcon_heavy_rate_progress"
                app:layout_constraintBottom_toBottomOf="@id/total_launches_falcon_heavy_rate_progress"
                tools:text="100%"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/falcon_heavy"
                app:layout_constraintTop_toBottomOf="@id/total_launches_falcon_heavy_rate_progress"
                app:layout_constraintLeft_toLeftOf="@id/total_launches_falcon_heavy_rate_progress"
                app:layout_constraintRight_toRightOf="@id/total_launches_falcon_heavy_rate_progress"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/total_launches_filter_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>