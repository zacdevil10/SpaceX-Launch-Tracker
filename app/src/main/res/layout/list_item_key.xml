<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_margin"
    android:paddingBottom="@dimen/small_margin">

    <TextView
        android:id="@+id/list_item_key_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?colorOnPrimary"
        android:layout_marginEnd="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_item_key_value"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Falcon Heavy" />

    <TextView
        android:id="@+id/list_item_key_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorOnPrimary"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/list_item_key_label"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="33000 kg" />

</androidx.constraintlayout.widget.ConstraintLayout>