<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/pin"
        android:drawable="@drawable/ic_pin_outline"
        android:state_activated="false" />

    <item
        android:id="@+id/unpin"
        android:drawable="@drawable/ic_pin"
        android:state_activated="true" />

    <transition
        android:fromId="@id/pin"
        android:toId="@id/unpin"
        android:drawable="@drawable/avd_pin_unpin" />

    <transition
        android:fromId="@id/unpin"
        android:toId="@id/pin"
        android:drawable="@drawable/avd_unpin_pin" />

</animated-selector>