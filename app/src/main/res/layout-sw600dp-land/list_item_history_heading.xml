<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/colorBackground"
        app:layout_constraintBottom_toTopOf="@+id/list_item_history_heading_container"
        app:layout_constraintEnd_toStartOf="@id/list_item_history_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="9dp"
        android:layout_height="0dp"
        android:background="?android:attr/colorBackground"
        app:layout_constraintBottom_toTopOf="@+id/list_item_history_heading_container"
        app:layout_constraintStart_toStartOf="@id/list_item_history_marker"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/list_item_history_line_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/color_timeline"
        app:layout_constraintEnd_toStartOf="@id/list_item_history_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_item_history_marker"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/event_circle"
        android:tint="@color/color_timeline"
        app:layout_constraintBottom_toBottomOf="@id/list_item_history_line_top"
        app:layout_constraintEnd_toEndOf="@id/list_item_history_heading_container"
        app:layout_constraintStart_toStartOf="@id/list_item_history_heading_container"
        app:layout_constraintTop_toTopOf="@id/list_item_history_line_top"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/list_item_history_line_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/color_timeline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_history_marker"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_history_heading_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_history_marker">

        <TextView
            android:id="@+id/list_item_history_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textAppearance="?textAppearanceHeadline5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2019" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>