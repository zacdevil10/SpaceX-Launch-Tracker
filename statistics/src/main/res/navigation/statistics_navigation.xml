<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistics_navigation"
    app:startDestination="@id/statistics_page_fragment">

    <fragment
        android:id="@+id/statistics_page_fragment"
        android:name="uk.co.zac_h.spacex.StatisticsFragment"
        app:enterAnim="@android:anim/fade_in"
        tools:layout="@layout/fragment_statistics">

        <action
            android:id="@+id/action_statistics_to_launch_history"
            app:destination="@id/launch_history_fragment" />

        <action
            android:id="@+id/action_statistics_to_landing_history"
            app:destination="@id/landing_history_fragment"
            app:exitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_statistics_to_launch_rate"
            app:destination="@id/launch_rate_fragment"
            app:exitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_statistics_to_launch_mass"
            app:destination="@id/launch_mass_fragment"
            app:exitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_statistics_to_fairing_recovery"
            app:destination="@id/fairing_recovery_fragment"
            app:exitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_statistics_to_pad_stats"
            app:destination="@id/pad_stats_fragment"
            app:exitAnim="@android:anim/fade_out" />

        <deepLink
            android:id="@+id/deepLink"
            app:uri="spacex://statistics" />

    </fragment>

    <fragment
        android:id="@+id/launch_history_fragment"
        android:name="uk.co.zac_h.spacex.graphs.launchhistory.LaunchHistoryFragment"
        tools:layout="@layout/fragment_launch_history">

        <argument
            android:name="type"
            app:argType="uk.co.zac_h.spacex.utils.Statistics" />

    </fragment>

    <fragment
        android:id="@+id/landing_history_fragment"
        android:name="uk.co.zac_h.spacex.graphs.landinghistory.LandingHistoryFragment"
        tools:layout="@layout/fragment_landing_history">

        <argument
            android:name="type"
            app:argType="uk.co.zac_h.spacex.utils.Statistics" />

    </fragment>

    <fragment
        android:id="@+id/launch_rate_fragment"
        android:name="uk.co.zac_h.spacex.graphs.launchrate.LaunchRateFragment"
        tools:layout="@layout/fragment_launch_rate">

        <argument
            android:name="type"
            app:argType="uk.co.zac_h.spacex.utils.Statistics" />

    </fragment>

    <fragment
        android:id="@+id/launch_mass_fragment"
        android:name="uk.co.zac_h.spacex.graphs.launchmass.LaunchMassFragment"
        tools:layout="@layout/fragment_launch_mass">

        <argument
            android:name="type"
            app:argType="uk.co.zac_h.spacex.utils.Statistics" />

    </fragment>

    <fragment
        android:id="@+id/fairing_recovery_fragment"
        android:name="uk.co.zac_h.spacex.graphs.fairingrecovery.FairingRecoveryFragment"
        tools:layout="@layout/fragment_fairing_recovery">

        <argument
            android:name="type"
            app:argType="uk.co.zac_h.spacex.utils.Statistics" />


    </fragment>

    <fragment
        android:id="@+id/pad_stats_fragment"
        android:name="uk.co.zac_h.spacex.graphs.padstats.PadStatsFragment"
        tools:layout="@layout/fragment_pad_stats">

        <argument
            android:name="type"
            app:argType="uk.co.zac_h.spacex.utils.Statistics" />

        <argument
            android:name="padType"
            app:argType="uk.co.zac_h.spacex.utils.PadType" />

    </fragment>

</navigation>